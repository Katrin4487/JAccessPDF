{
  "page-master-styles": [
    {
      "name": "main-content",
      "page-height": "29.7cm",
      "page-width": "21cm",
      "margin": "2cm"
    }
    ],
  "text-styles": [
      {
        "name": "headline",
        "font-size": "18pt",
        "font-family-name": "Open Sans",
        "font-weight": "400",
        "font-style": "normal"
      },
      {
        "name": "normal-text",
        "font-size": "11pt",
        "font-family-name": "Open Sans",
        "font-weight": "400",
        "font-style": "normal"
      },
      {
        "name": "emphasis",
        "font-size": "11pt",
        "font-family-name": "Open Sans",
        "font-weight": "400",
        "font-style": "italic"
      },
    {
      "name": "bold",
      "font-size": "11pt",
      "font-family-name": "Open Sans",
      "font-weight": "700",
      "font-style": "normal"
    }
  ],
  "element-styles": [
    {
      "name": "h1-style",
      "target-element": "headline",
      "properties": {
        "text-style-name": "headline",
        "space-before": "12pt",
        "space-after": "6pt"
      }
    },
    {
      "name": "standard-paragraph",
      "target-element": "paragraph",
      "properties": {
        "text-style-name": "normal-text",
        "text-align": "justify",
        "line-height": "1.5"
      }
    },
    {
      "name": "space-before-paragraph",
      "target-element": "paragraph",
      "properties": {
        "text-style-name": "normal-text",
        "text-align": "justify",
        "line-height": "20pt",
        "space-before" :  "1cm"
      }
    },
    {
      "name": "hyperlink-style",
      "target-element": "text-run",
      "properties": {
        "text-style-name": "normal-text",
        "text-color": "green",
        "text-decoration": "underline"
      }
    },
    {
      "name": "red-bold-text-run",
      "target-element": "text-run",
      "properties": {
        "text-style-name": "bold",
        "text-color": "red"
      }
    },
    {
      "name": "underline-text-run",
      "target-element": "text-run",
      "properties": {
        "text-style-name": "normal",
        "text-decoration": "underline"
      }
    },
    {
      "name": "overline-text-run",
      "target-element": "text-run",
      "properties": {
        "text-style-name": "normal",
        "text-decoration": "overline"
      }
    },
    {
      "name": "line-through-text-run",
      "target-element": "text-run",
      "properties": {
        "text-style-name": "normal",
        "text-decoration": "line-through"
      }
    },
    {
      "name": "normal-text-run",
      "target-element": "text-run",
      "properties": {
        "text-style-name": "normal-text",
        "text-color": "black"
      }
    },
    {
      "name": "bold-text-run",
      "target-element": "text-run",
      "properties": {
        "text-style-name": "bold",
        "text-color": "black"
      }
    },
    {
      "name": "italic-text-run",
      "target-element": "text-run",
      "properties": {
        "text-style-name": "emphasis",
        "text-color": "black"
      }
    }
  ]
}